.ui.padded.grid
  .column
    %h1 Listing Types
    %table.ui.striped.blue.table
      %thead
        %tr
          %th= RoomType.human_attribute_name "name"
          %th= RoomType.human_attribute_name "cost"
          %th{colspan: "2"}
      %tbody
        - @room_types.each do |room_type|
          %tr
            %td= room_type.name
            %td= room_type.cost
            %td= link_to semantic_icon("edit") + "Edit", edit_room_type_path(room_type)
            %td= link_to semantic_icon("trash") + "Delete", room_type, method: :delete, data: {confirm: "Are you sure to delete \"#{room_type.name}\""}
