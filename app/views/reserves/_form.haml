.one.wide.column
.six.wide.column
  = form_for(@reserf, html: {class: "ui #{"error" if @reserf.errors.any?} form segment"}) do |f|
    .field{class: "#{"error" if @reserf.errors[:customer].any?}"}
      = f.label :customer_id
      = f.collection_select :customer_id, Customer.all, :id, :name, {prompt: true}, {class: "ui search dropdown"}
    .field{class: "#{"error" if @reserf.errors[:guest_amount].any?}"}
      = f.label :guest_amount
      = f.text_field :guest_amount
    .field{class: "#{"error" if @reserf.errors[:night_amount].any?}"}
      = f.label :night_amount
      = f.text_field :night_amount
    .field{class: "#{"error" if @reserf.errors[:room_amount].any?}"}
      = f.label :room_amount
      = f.text_field :room_amount
    .field{class: "#{"error" if @reserf.errors[:reserve_status].any?}"}
      = f.label :reserve_status_id
      = f.collection_select :reserve_status_id, ReserveStatus.all, :id, :name, {prompt: true}, {class: "ui dropdown"}
    .field{class: "#{"error" if @reserf.errors[:booking_date].any?}"}
      = f.label :booking_date
      = f.text_field :booking_date
    .field{class: "#{"error" if @reserf.errors[:check_in_date].any?}"}
      = f.label :check_in_date
      = f.text_field :check_in_date
    .field{class: "#{"error" if @reserf.errors[:check_in_time].any?}"}
      = f.label :check_in_time
      = f.text_field :check_in_time
    .field{class: "#{"error" if @reserf.errors[:check_out_date].any?}"}
      = f.label :check_out_date
      = f.text_field :check_out_date
    .field{class: "#{"error" if @reserf.errors[:check_out_time].any?}"}
      = f.label :check_out_time
      = f.text_field :check_out_time
    .ui.divider
    .field
      .ui.right.floated.buttons
        = link_to "Cancel", reserves_path, {class: "ui button"}
        .or
        = f.submit nil, {class: "positive ui button"}
- if @reserf.errors.any?
  .six.wide.column
    .ui.error.message
      .header
        = pluralize(@reserf.errors.count, "error")
        prohibited this reserf from being saved:
      %ul.list
        - @reserf.errors.full_messages.each do |message|
          %li= message
