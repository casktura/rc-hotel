.ui.centered.padded.grid#login_pane
  .three.wide.column
    = form_tag(authen_login_path, {class: "ui form"}) do
      .ui.attached.blue.segment
        .field
          = text_field_tag :username, params[:username], {placeholder: "Username"}
        .field
          = password_field_tag :password, params[:password], {placeholder: "Password"}
      = button_tag "Log In", {type: "submit", class: "ui bottom attached fluid blue button"}
